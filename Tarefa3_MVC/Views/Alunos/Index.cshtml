@model IEnumerable<Tarefa3_MVC.Models.Aluno>

@{
    ViewBag.Title = "Alunos";
}

<h2>Alunos</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cursos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome) do Aluno
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cursos.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AlunoID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AlunoID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.AlunoID })
        </td>
    </tr>
}

</table>
